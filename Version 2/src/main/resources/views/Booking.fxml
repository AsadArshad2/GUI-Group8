<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.BookingController" prefWidth="900" prefHeight="600">
    <VBox spacing="20" layoutX="50" layoutY="20" alignment="TOP_CENTER" prefWidth="800">
        <Label text="Venue Bookings - Operations and Marketing" style="-fx-font-size: 18px;"/>

        <HBox spacing="10">
            <Label text="Select Date:"/>
            <DatePicker fx:id="datePicker"/>
            <Button text="Check Availability" onAction="#handleCheckAvailability"/>
        </HBox>

        <TableView fx:id="bookingTableView" prefHeight="300">
            <columns>
                <TableColumn fx:id="clientName" text="Client Name"/>
                <TableColumn fx:id="eventName" text="Event Name"/>
                <TableColumn fx:id="date" text="Date"/>
                <TableColumn fx:id="startTime" text="Start Time"/>
                <TableColumn fx:id="endTime" text="End Time"/>
                <TableColumn fx:id="totalCost" text="Total Cost"/>
                <TableColumn fx:id="configurationDetails" text="Configuration"/>
                <TableColumn fx:id="status" text="Status"/>
            </columns>
        </TableView>

        <Label fx:id="statusLabel" text="Status messages will appear here..." style="-fx-text-fill: #7f8c8d;"/>
    </VBox>
</AnchorPane>
