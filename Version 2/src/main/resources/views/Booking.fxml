<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.BookingController"
            stylesheets="@../styles/style.css"
            prefWidth="900" prefHeight="600">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <!-- Title and Back Button -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Back" onAction="#handleBackToCalendar" styleClass="back-button" />
            <Label text="Venue Bookings - Operations and Marketing" style="-fx-font-size: 18px; -fx-text-fill: white;" />
        </HBox>

        <!-- Scrollable TableView -->
        <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="500" hbarPolicy="NEVER">
            <TableView fx:id="bookingTableView" editable="true">
                <columns>
                    <TableColumn fx:id="clientName" text="Client Name" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="eventName" text="Event Name" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="date" text="Date" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="startTime" text="Start Time" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="endTime" text="End Time" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="totalCost" text="Total Cost" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="configurationDetails" text="Configuration" style="-fx-alignment: CENTER;" />
                    <TableColumn fx:id="status" text="Status" style="-fx-alignment: CENTER;" />
                </columns>
            </TableView>
        </ScrollPane>

        <!-- Status Label -->
        <Label fx:id="statusLabel" text="All bookings loaded..." style="-fx-text-fill: lightgray; -fx-font-weight: bold;" />

        <!-- Spacer to Push Buttons to Bottom -->
        <Region VBox.vgrow="ALWAYS" />

        <!-- Button Layout at the Bottom -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancel Booking" onAction="#handleCancelledBooking"
                    style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                    prefWidth="150" />
            <Button text="Hold Booking" onAction="#handleHeldBooking"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                    prefWidth="150" />
            <Button text="Confirm Booking" onAction="#handleConfirmedBooking"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                    prefWidth="150" />
            <Button text="Add Booking" onAction="#handleAddBooking"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                    prefWidth="150" />
            <Button text="Finish Edit" onAction="#handleFinishEdit"
                    style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                    prefWidth="150" />
        </HBox>
    </VBox>
</AnchorPane>