<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" prefWidth="900" prefHeight="600"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="controllers.VenueCalendarController">

    <Label style="-fx-font-size: 20px;" text="Venue Calendar" />

    <DatePicker fx:id="datePicker" />

    <TableView fx:id="availabilityTable" prefWidth="800">
        <columns>
            <TableColumn fx:id="timeSlotColumn" text="Time Slot" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="timeSlot"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="venueColumn" text="Venue" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="venue"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="status"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

    <Button text="Return to Main Menu" onAction="#goToMainMenu" />

</VBox>
