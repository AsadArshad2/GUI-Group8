<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" prefWidth="900" prefHeight="600"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="controllers.SeatingController">

    <Label style="-fx-font-size: 20px;" text="Seating Configurations" />

    <ComboBox fx:id="roomSelector" promptText="Select Venue Space" prefWidth="300" />

    <TableView fx:id="seatingTable" prefWidth="800">
        <columns>
            <TableColumn fx:id="rowColumn" text="Row" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="row"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="seatColumn" text="Seat" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="seat"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="viewColumn" text="Restricted View" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="restrictedView"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="accessColumn" text="Wheelchair Accessible" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="wheelchairAccessible"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Button text="Save Configuration" onAction="#handleSave" />
    <Button text="Finalize Layout" onAction="#handleFinalizeLayout" />

    <Button text="Return to Main Menu" onAction="#goToMainMenu" />
</VBox>
